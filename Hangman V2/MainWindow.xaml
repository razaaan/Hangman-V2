<Window x:Class="Hangman_V2.MainWindow" 
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:Hangman_V2"
		mc:Ignorable="d"
		Title="Word" Height="156.4" Width="248.2">
	<Grid>
		<TextBox x:Name="textBoxWord" HorizontalAlignment="Left" Height="20" Margin="40,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" KeyDown="textBoxWord_KeyDown"/>
		<Label x:Name="labelInput" Content="What is your phrase?" HorizontalAlignment="Left" Margin="60,10,0,0" VerticalAlignment="Top" Width="120"/>
		<Button x:Name="buttonSubmit" Content="Submit" HorizontalAlignment="Left" Margin="80,86,0,0" VerticalAlignment="Top" Width="80" Click="buttonSubmit_Click"/>

	</Grid>
</Window>
